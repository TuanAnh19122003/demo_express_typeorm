<!DOCTYPE html>
<html lang="en">
    <%- include('../layouts/head.ejs', { pageTitle: 'Danh sách người dùng' }) %>
<body>
    <div class="container mb-5">
        <%- include('../layouts/navbar.ejs') %>
        <div class="card mt-4">
            <div class="card-header d-flex align-items-center justify-content-between mb-4">
                <h1 class="mb-1">Users List</h1>
                <a href="/api/users/create" class="btn btn-primary">
                    <i class="fa-solid fa-circle-plus"></i> Create
                </a>
            </div>

            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(function(item){ %>
                            <tr>
                                <td><%= item.id %></td>
                                <td><%= item.firstName %></td>
                                <td><%= item.lastName %></td>
                                <td><%= item.isActive ? 'Active' : 'Inactive' %></td>
                                <td>
                                    <a href="/api/users/<%= item.id %>/edit" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a href="/api/users/<%= item.id %>/delete" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book?');">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        
        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
